# Configuration Docker Compose pour Hub-Lib

# PostgreSQL
POSTGRES_DB=hub_lib
POSTGRES_USER=hub_lib_user
POSTGRES_PASSWORD=hub_lib_secure_password_2024

# Redis
REDIS_PASSWORD=redis_secure_password_2024

# JWT Secrets (générer des secrets plus forts en production)
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_for_security
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_minimum_32_characters_long_for_security
JWT_REFRESH_EXPIRES_IN=30d

# Environment
NODE_ENV=production

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Frontend
VITE_API_URL=http://localhost:3001


# OAuth GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
