# Configuration Nginx pour hublib.ovh
# Production

# Redirection HTTP vers HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name hublib.ovh www.hublib.ovh;

    # Let's Encrypt challenge
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Rediriger tout le reste vers HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# Configuration HTTPS
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name hublib.ovh www.hublib.ovh;

    # Certificats SSL (à générer avec Let's Encrypt)
    ssl_certificate /etc/nginx/ssl/hublib.ovh/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/hublib.ovh/privkey.pem;

    # Configuration SSL moderne
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline' 'unsafe-eval'" always;

    # Taille maximale des uploads
    client_max_body_size 100M;

    # Logs
    access_log /var/log/nginx/hublib.ovh.access.log main;
    error_log /var/log/nginx/hublib.ovh.error.log warn;

    # Cache des fichiers statiques
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        root /usr/share/nginx/html;
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # API Backend (commenté - backend non implémenté pour l'instant)
    # Décommenter quand le backend sera disponible
    # location /api {
    #     limit_req zone=api_limit burst=20 nodelay;
    #     proxy_pass http://backend:3001;
    #     proxy_http_version 1.1;
    #     proxy_set_header Upgrade $http_upgrade;
    #     proxy_set_header Connection 'upgrade';
    #     proxy_set_header Host $host;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    #     proxy_cache_bypass $http_upgrade;
    #     proxy_read_timeout 300s;
    #     proxy_connect_timeout 75s;
    #     proxy_cache api_cache;
    #     proxy_cache_valid 200 60m;
    #     proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
    #     proxy_cache_background_update on;
    #     proxy_cache_lock on;
    # }

    # WebSocket support (commenté - backend non implémenté pour l'instant)
    # location /ws {
    #     proxy_pass http://backend:3001;
    #     proxy_http_version 1.1;
    #     proxy_set_header Upgrade $http_upgrade;
    #     proxy_set_header Connection "upgrade";
    #     proxy_set_header Host $host;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    #     proxy_read_timeout 86400;
    # }

    # Frontend SPA - servir index.html pour toutes les routes
    location / {
        limit_req zone=general_limit burst=50 nodelay;
        
        root /usr/share/nginx/html;
        try_files $uri $uri/ /index.html;
        index index.html;

        # Cache control pour index.html
        location = /index.html {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

